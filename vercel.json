{
  "version": 2,
  "builds": [
    {
      "src": "server/src/index.js",
      "use": "@vercel/node",
      "config": {
        "distDir": "server/dist"
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/dist/index.js" },
    { "src": "/(.*)", "dest": "/client/dist/index.html" }
  ]
}
